@{
    Layout = null;
    ViewBag.Title = "Index";
}

<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    @Styles.Render("~/Content/cssformulario")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/js")
    <link rel="stylesheet" href="~/Css/FormularioEvento.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainnav" style="background-color:black">
            <div class="container">
                <a class="navbar-brand js-scroll-trigger" href="#contact" style="color:white">ONT <i class="fas fa-globe-americas"></i></a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarresponsive" aria-controls="navbarresponsive"
                        aria-expanded="false" aria-label="toggle navigation">
                    <span class="navbar-toggler-icon">
                    </span> <span class="badge badge-pill badge-info">Menú</span>
                </button>
                <div class="collapse navbar-collapse" id="navbarresponsive">
                    <ul class="navbar-nav ml-auto my-2 my-lg-0">
                        <li class="nav-item"><a class="nav-link text-white" href="#about">Crear Evento</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="#">Publicar Evento</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="#event">Progresion Alumno</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="#">Listar Academias</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
            <div class="col-lg-12 text-center">
                <img src="~/img/logo.jpg" style="width:100%" class="imglog d-block " id="logo">
            </div>
            <div class="nav row rounded-top align-items-strech justify-content-between" style="margin-bottom:1%">
                <div class="col-md-12 col-lg logo d-flex align-items-center justify-content-center justify-content-lg-start">
                    <h5>            ITF Federación  </h5>
                    <i style="font-size:30px" class="fas fa-globe-americas"></i>
                    <h5>   ONT 2020</h5>
                </div>
                <nav class="c-1  d-flex align-items-center">
                    <div class="btn btn-flat btn-danger">
                        <span>Funcionario</span><br />
                        <i style="font-size:25px" class="fas fa-user-tie"></i>
                    </div>&nbsp;
                    <button class="btn btn-flat-primary btn-primary">
                        <span>Cerrar Sesion</span><br />
                        <i style="font-size:25px" class="fas  fa-user-times"></i>
                    </button>&nbsp;
                </nav>
            </div>
        </div>
    </header>
    <main>
        <div class="page-wrapper bg-gra-03 p-t-0 p-b-50">
            <div class="wrapper wrapper--w790">
                <div class="card card-5">
                    <div class="card-heading">
                        <h2 class="title">Formulario de creacion de Evento</h2>
                    </div>
                    <div class="card-body">
                        <form method="POST" class="formulario">
                            <div class="form-row ">
                                <div class="name">Nombre del Evento</div>
                                <div class="value">
                                    <div class="input-group">
                                        <input class="input--style-5" type="text" name="nombreEvento">
                                    </div>
                                </div>
                            </div>
                            <div class="form-row ">
                                <div class="name">Fecha del Evento</div>
                                <div class="value">
                                    <div class="input-group">
                                        <input class="input--style-5" type="date" name="fechaEvento">
                                    </div>
                                </div>
                            </div>
                            <div class="form-row ">
                                <div class="name">Direccion</div>
                                <div class="value">
                                    <div class="input-group">
                                        <input class="input--style-5" type="text" name="direccionEvento">
                                    </div>
                                </div>
                            </div>
                            <div class="form-row m-b-55">
                                <div class="name">Fechas de Inscripcion</div>
                                <div class="value">
                                    <div class="row row-space">
                                        <div class="col-6">
                                            <div class="input-group-desc">
                                                <input class="input--style-5" type="text" name="fechaInicio">
                                                <label class="label--desc">desde</label>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="input-group-desc">
                                                <input class="input--style-5" type="text" name="fechaFinal">
                                                <label class="label--desc">hasta</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="name">Tipo de Evento</div>
                                <div class="value">
                                    <div class="input-group">
                                        <div class="rs-select2 js-select-simple select--no-search">
                                            <select name="tipo">
                                                <option disabled="disabled" selected="selected">Seleccione Opcion</option>
                                                <option>Nacional</option>
                                                <option>Regional</option>
                                                <option>Local</option>
                                            </select>
                                            <div class="select-dropdown"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row m-b-55">
                                <div class="name">Edades</div>
                                <div class="value">
                                    <div class="row row-space">
                                        <div class="col-6">
                                            <div class="input-group-desc">
                                                <input class="input--style-5" type="text" name="edadInicio">
                                                <label class="label--desc">desde</label>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="input-group-desc">
                                                <input class="input--style-5" type="text" name="edadFinal">
                                                <label class="label--desc">hasta</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row m-b-55">
                                <div class="name">Peso</div>
                                <div class="value">
                                    <div class="row row-space">
                                        <div class="col-6">
                                            <div class="input-group-desc">
                                                <input class="input--style-5" type="text" name="pesoInicio">
                                                <label class="label--desc">desde</label>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="input-group-desc">
                                                <input class="input--style-5" type="text" name="pesoFinal">
                                                <label class="label--desc">hasta</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row m-b-55">
                                <div class="name">Grado</div>
                                <div class="value">
                                    <div class="row row-space">
                                        <div class="col-6">
                                            <div class="form-row">
                                                <div class="value">
                                                    <div class="input-group">
                                                        <div class="rs-select2 js-select-simple select--no-search">
                                                            <select name="tipo">
                                                                <option disabled="disabled" selected="selected">Seleccione Opcion</option>
                                                                <option value="bl">Blanco</option>
                                                                <option value="blam">Blanco punta Amarillo</option>
                                                                <option value="am">Amarillo</option>
                                                                <option value="amve">Amarillo punta Verde</option>
                                                                <option value="ve">Verde</option>
                                                                <option value="veaz">Verde punta Azul</option>
                                                                <option value="az">Azul</option>
                                                                <option value="azro">Azul punta Roja</option>
                                                                <option value="ro">Roja</option>
                                                                <option value="rone">Roja punta Negra</option>
                                                                <option value="ne">Negra</option>
                                                            </select>
                                                            <div class="select-dropdown"></div>
                                                            <label class="label--desc">desde</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-row">
                                                <div class="value">
                                                    <div class="input-group">
                                                        <div class="rs-select2 js-select-simple select--no-search">
                                                            <select name="tipo">
                                                                <option disabled="disabled" selected="selected">Seleccione Opcion</option>
                                                                <option value="bl">Blanco</option>
                                                                <option value="blam">Blanco punta Amarillo</option>
                                                                <option value="am">Amarillo</option>
                                                                <option value="amve">Amarillo punta Verde</option>
                                                                <option value="ve">Verde</option>
                                                                <option value="veaz">Verde punta Azul</option>
                                                                <option value="az">Azul</option>
                                                                <option value="azro">Azul punta Roja</option>
                                                                <option value="ro">Roja</option>
                                                                <option value="rone">Roja punta Negra</option>
                                                                <option value="ne">Negra</option>
                                                            </select>
                                                            <div class="select-dropdown"></div>
                                                            <label class="label--desc">hasta</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row ">
                                <div class="name">Adjuntar Foto</div>
                                <div class="value">
                                    <div class="input-group">
                                        <input type="file" class="form-control-file" id="foto">
                                    </div>
                                </div>
                            </div>
                            <div class="value">
                                <div class="row row-space">
                                    <div class="col-6">
                                        <button class=" boton" type="submit">Aceptar</button>
                                    </div>
                                    <div class="col-6">
                                        <button class=" boton" type="submit">Cancelar</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </main>

    <footer>
        <div class="container">
            <div class="row redes-sociales justify-content-center">
                <div class="col-auto">
                    <i class="fab fa-twitter fa-circle fa-5x icono twitter"></i>
                    <i class="fab fa-instagram fa-circle fa-5x icono instagram"></i>
                    <i class="fab fa-facebook fa-circle fa-5x icono facebook"></i>
                    <i class="fab fa-youtube fa-circle fa-5x icono youtube"></i>
                </div>
            </div>

        </div>
    </footer>
    @Scripts.Render("~/bundles/jsformulario")
    @Scripts.Render("~/Bundles/js")

</body>
</html>
